{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": ["apigateway:*", "cloudwatch:*", "lambda:*", "logs:*", "s3:*", "ssm:*"],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": "eu-west-1"
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": ["cloudfront:*"],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": ["iam:*Role*", "iam:GetPolicy", "iam:CreatePolicy", "iam:DeletePolicy", "iam:*PolicyVersion*"],
      "NotResource": ["arn:aws:iam::*:role/cdk-*", "arn:aws:iam::*:policy/cdkCFExecutionPolicy"]
    }
  ]
}
